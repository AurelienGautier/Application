<UserControl x:Class="Application.FillFormControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Application"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel Grid.Column="1" Orientation="Horizontal" Width="auto" Height="auto" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ComboBox x:Name="Forms" Grid.Column="1" VerticalAlignment="Center" Width="271" IsEditable="True" Height="46" FontSize="16" FontFamily="Verdana" HorizontalAlignment="Center" VerticalContentAlignment="Center" />

            <Button x:Name="NewForm" Content="Nouveau" Click="FillAform" Background="White" FontFamily="Verdana" Width="80" FontSize="16"/>
            <Button x:Name="ModifyForm" Content="Modifier" Background="White" FontFamily="Verdana" Width="80" FontSize="16"/>
        </StackPanel>
    </Grid>
</UserControl>
